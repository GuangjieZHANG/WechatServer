<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fr.toulouse.dao.ObjectDao">
    <select id="queryObjects" resultType="fr.toulouse.entity.Object">
        SELECT id,owner,name,image,discription,price,contactName,contactNum,contactWechat,tag ,aimer
        FROM tb_object
        ORDER BY aimer
        DESC
    </select>

    <select id="queryObjectsById" resultType="fr.toulouse.entity.Object">
        SELECT id,owner,name,image,discription,price,contactName,contactNum,contactWechat,tag ,aimer
        FROM tb_object
        WHERE id = #{id}
    </select>

    <select id="queryObjectsByOwner" resultType="fr.toulouse.entity.Object">
        SELECT id,owner,name,image,discription,price,contactName,contactNum,contactWechat,tag ,aimer
        FROM tb_object
        WHERE owner = #{owner}
    </select>

    <select id="queryObjectsByTag" resultType="fr.toulouse.entity.Object">
        SELECT id,owner,name,image,discription,price,contactName,contactNum,contactWechat,tag ,aimer
        FROM tb_object
        WHERE tag = #{tag}
    </select>

    <insert id="insertObject" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="fr.toulouse.entity.Object">
        INSERT INTO tb_object(...) VALUES (#{},#{}...)
    </insert>
    
    <update id="updateObject" parameterType="fr.toulouse.entity.Object">
        UPDATE tb_object
        <set>
            <if test="name != null">name=#{name}</if>
        </set>
        WHERE id=#{id}
    </update>

    <delete id="deleteObject">
        DELETE FROM tb_object
        WHERE id = #{id}
    </delete>

</mapper>